<Window x:Class="CDCToolbox.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="TextEditor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <avalonEdit:TextEditor Name="editor" Grid.Row="0" FontFamily="Consolas" SyntaxHighlighting="XML" FontSize="10pt"/>
        </Grid>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBox Width="150"></TextBox>
            <Button Height="20" Width="40" Content="Find" Margin="10,0,0,0" Click="Button_Click_2"></Button>
            <Button Height="20" Width="40" Content="Cancel" Margin="40,0,0,0" Click="Button_Click"></Button>
            <Button Height="20" Width="40" Content="Save" Margin="10,0,0,0" Click="Button_Click_1"></Button>
        </WrapPanel>

    </Grid>
</Window>
